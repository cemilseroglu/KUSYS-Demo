@model KUSYS_Demo.Models.UserCreateViewModel

@{
    ViewData["Title"] = "RoleCreate";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}


<h1>Öğrenci Oluştur</h1>
<span>Aşağıdan istenen bilgileri girerek yeni bir öğrenci tanımlayabilirsiniz</span>
<hr />
<div>
    <div class="form-group">
        <div class="col-md-4">
            <form asp-controller="Admin" asp-action="UserCreate" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="FirstName" class="control-label">Adı</label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName" class="control-label">Soyadı</label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label">Email Adresi</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="BirthDate" class="control-label">Doğum Tarihi</label>
                    <input type="Date" asp-for="BirthDate" class="form-control"/>
                </div>
                <div>
                    <label asp-for="Password" class="control-label">Parola</label>
                    <input asp-for="Password" type="password" class="form-control" autocomplete="new-password" aria-required="true"/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="ConfirmPassword" class="control-label">Parolayı onaylamak için tekrar girin</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" autocomplete="new-password" aria-required="true"/>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="mt-3 btn btn-outline-secondary btn-sm btn-rounded ripple-surface-dark">
                    <lord-icon src="https://cdn.lordicon.com/jvihlqtw.json"
                               target="div"
                               trigger="hover"
                               stroke="90"
                               colors="primary:#660099,secondary:#660099"
                               style="width:40px;height:40px">
                    </lord-icon>
                    <span style="color:#660099">Oluştur</span>
                </button>
            </form>
        </div>
    </div>
</div>

<div class="mt-5 btn btn-outline-dark btn-sm btn-rounded ripple-surface-dark">
    <a asp-action="Users">
        <lord-icon src="https://cdn.lordicon.com/iiueiwdd.json"
                   target="div"
                   trigger="hover"
                   stroke="100"
                   style="width:15px;height:15px">
        </lord-icon>
        <span style="color:#660099">Listeye Geri Dön</span>
    </a>
</div>