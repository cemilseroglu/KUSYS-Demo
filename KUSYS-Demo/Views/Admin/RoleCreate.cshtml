@model KUSYS_Demo.Models.RoleViewModel

@{
    ViewData["Title"] = "RoleCreate";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

@*<h1>RoleCreate</h1>*@

@*<h4>RoleViewModel</h4>*@
<h1>Rol Oluştur</h1>
<span>Aşağıdan rol ismi girerek yeni bir rol tanımlayabilirsiniz</span>
<hr />
<div>
    <div class="form-group">
    <div class="col-md-4">
        <form asp-action="RoleCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control"/>
            </div>
            <button type="submit" class="mt-3 btn btn-outline-secondary btn-sm btn-rounded ripple-surface-dark">
            <lord-icon
                src="https://cdn.lordicon.com/jvihlqtw.json"
                target="div"
                trigger="hover"
                stroke="90"
                colors="primary:#660099,secondary:#660099"
                style="width:40px;height:40px">
            </lord-icon>
            <span style="color:#660099">Oluştur</span>
            </button>
        </form>
    </div>
    </div>
</div>

<div class="mt-5 btn btn-outline-dark btn-sm btn-rounded ripple-surface-dark">
    <a asp-action="Roles">
        <lord-icon
            src="https://cdn.lordicon.com/iiueiwdd.json"
            target="div"
            trigger="hover"
            stroke="100"
            style="width:15px;height:15px">
        </lord-icon>
        <span style="color:#660099">Listeye Geri Dön</span>
    </a>
</div>

