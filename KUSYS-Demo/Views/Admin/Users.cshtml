@using KUSYS_Demo.Entities.Concrete

@model List<AppUser>
@{
    ViewData["Title"] = "Kullanıcılar";
    Layout = "/Views/Admin/_AdminLayout.cshtml";
}

<h1>Kullanıcı İşlemleri</h1>
<div class="form-outline mb-4">
    <input type="text" class="form-control" id="datatable-search-input" />
    <label class="form-label" for="datatable-search-input">Search</label>
</div>
<div id="datatable-search" class="row datatable datatable-sm datatable-bordered datatable-hover"
     data-mdb-fixed-header="true" data-mdb-bordered="true" data-mdb-striped="true">
    <table class="col col-md-4 table align-middle mb-0" style="width:800px;">
        @{
            if (Model.Count() == 0)
            {
                <thead>
                    <tr>
                        <td colspan="3">HİÇ BİR KULLANICI YOK</td>
                    </tr>
                </thead>
            }
            else
            {
                <thead>
                    <tr>
                        @*<th class="th-sm">Id</th>*@
                        <th class="th-sm">Ad</th>
                        <th class="th-sm">Soyad</th>
                        <th class="th-sm">Email</th>
                        <th class="th-sm">Telefon</th>
                        @*<th class="th-sm">Hesap Aktivasyon</th>*@
                        <th class="th-sm">Oyun Oynama Sayısı</th>
                        <th class="th-sm">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            @*<td>@item.Id</td>*@
                            <td>@item.FirstName</td>
                            <td>@item.LastName</td>
                            <td>@item.Email</td>
                            <td>@item.PhoneNumber</td>
                            <td>
                                <div>
                                    <a class="text-secondary" asp-controller="Admin" asp-action="UpdateUser" asp-route-id="@item.Id" title="Düzenle"><i class="fas fa-edit me-1"></i></a>
                                    <a class="text-danger" asp-controller="Admin" asp-action="UserDelete" asp-route-id="@item.Id" title="Sil" onclick="return DeleteConfirm(this);"><i class="fas fa-trash-alt me-1"></i></a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            }
        }
    </table>
</div>

<div class="mt-3 btn btn-outline-secondary btn-lg btn-rounded ripple-surface-dark">
    <a asp-action="UserCreate">
        <lord-icon src="https://cdn.lordicon.com/mecwbjnp.json"
                   target="div"
                   trigger="hover"
                   colors="primary:#121331,secondary:#660099"
                   stroke="90"
                   style="width:50px;height:50px">
        </lord-icon>
        <span style="color:#660099">
            Kullanıcı Oluştur
        </span>
    </a>
</div>
