@using KUSYS_Demo.Entities.Concrete

@model List<CourseUser>?
@{
    ViewData["Title"] = "Öğrencinin Sahip Olduğu Kurslar";
    Layout = "/Views/User/_UserLayout.cshtml";
}

<h1>Öğrencinin Sahip Olduğu Kurslar</h1>
<div class="form-outline mb-4">
    <input type="text" class="form-control" id="datatable-search-input" />
    <label class="form-label" for="datatable-search-input">Search</label>
</div>
<div id="datatable-search" class="row datatable datatable-sm datatable-bordered datatable-hover"
     data-mdb-fixed-header="true" data-mdb-bordered="true" data-mdb-striped="true">
    <table class="col col-md-4 table align-middle mb-0" style="width:800px;">
        @{
            if (Model.Count() == 0)
            {
                <thead>
                    <tr>
                        <td colspan="3">Kayıt olduğunuz hiç bir ders yok!</td>
                    </tr>
                </thead>
            }
            else
            {
                <thead>
                    <tr>
                        <th class="th-sm">Kurs ID</th>
                        <th class="th-sm">Kurs Adı</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Course.CourseName</td>
                        </tr>
                    }
                </tbody>
            }
        }
    </table>
</div>

<div class="mt-3 btn btn-outline-secondary btn-lg btn-rounded ripple-surface-dark">
    <a asp-action="CourseUserCreate">
        <lord-icon src="https://cdn.lordicon.com/mecwbjnp.json"
                   target="div"
                   trigger="hover"
                   colors="primary:#121331,secondary:#660099"
                   stroke="90"
                   style="width:50px;height:50px">
        </lord-icon>
        <span style="color:#660099">
            Ders Ekle
        </span>
    </a>
</div>
