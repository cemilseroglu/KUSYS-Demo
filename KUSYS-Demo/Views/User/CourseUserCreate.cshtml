@model KUSYS_Demo.Models.AddCourseToUserViewModel

@{
    ViewData["Title"] = "CourseUserCreate";
    Layout = "~/Views/User/_UserLayout.cshtml";
}

<h1>Derse Kayıt Ol</h1>
<span>Aşağıdan listeden ders seçerek kayıt olabilirsiniz.<strong>Not:sahip olduğunuz kurslar listede gözükmeyecektir.</strong></span>
<hr />
<div>
    <div class="form-group">
        <div class="col-md-4">
            <form asp-action="CourseUserCreate">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <select class="form-control" asp-for="CourseId">
                        <option selected="">Lütfen Ders Seçin</option>
                        @foreach (var item in Model.OwnableCourseList)
                        {
                            <option value="@item.Id">@item.CourseName</option>
                        }
                    </select>
                </div>
                <button type="submit" class="mt-3 btn btn-outline-secondary btn-sm btn-rounded ripple-surface-dark">
                    <lord-icon src="https://cdn.lordicon.com/jvihlqtw.json"
                               target="div"
                               trigger="hover"
                               stroke="90"
                               colors="primary:#660099,secondary:#660099"
                               style="width:40px;height:40px">
                    </lord-icon>
                    <span style="color:#660099">Oluştur</span>
                </button>
            </form>
        </div>
    </div>
</div>

<div class="mt-5 btn btn-outline-dark btn-sm btn-rounded ripple-surface-dark">
    <a asp-action="OwnedCourses">
        <lord-icon src="https://cdn.lordicon.com/iiueiwdd.json"
                   target="div"
                   trigger="hover"
                   stroke="100"
                   style="width:15px;height:15px">
        </lord-icon>
        <span style="color:#660099">Listeye Geri Dön</span>
    </a>
</div>
