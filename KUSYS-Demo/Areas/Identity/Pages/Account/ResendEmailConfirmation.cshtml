@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Email Doğrulama";
}

<form method="post">
    <!-- Section: Design Block -->
    <section class="text-center text-lg-start pt-5">

        <div class="card m-5">
            <div class="row g-0 d-flex justify-content-center">
                <div class="col-6 d-lg-flex mt-lg-0 mt-5">
                    <img src="~/img/email.webp"
                         alt="Trendy Pants and Shoes"
                         class="w-100 rounded-t-5 rounded-tr-lg-0 rounded-bl-lg-5" />
                </div>
                <div class="col-lg-6 col-12 mt-lg-0 mt-5 align-self-center">
                    <div class="card-body">
                        <h1 class="fw-bold">
                            @ViewData["Title"]
                            <br />
                        </h1>
                        <span class="text-success">Hesap doğrulama kodunuzu tekrar alın.</span>
                        <p class="text-muted mb-5">
                            Mailinize doğrulama kodu gelmiyor ise bizimle iletişime geçin.
                        </p>
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="d-md-flex flex-row">
                            <div class="form-outline flex-fill me-1 mb-4 mb-md-0">

                                <input asp-for="Input.Email" class="form-control" aria-required="true" />
                                <label asp-for="Input.Email" class="form-label"></label>
                            </div>
                            <!-- Submit button -->
                            <button type="submit" class="btn btn-lg ms-md-2 main-button">
                                Gönder
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Section: Design Block -->
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
