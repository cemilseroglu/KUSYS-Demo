@model string

@if (!String.IsNullOrEmpty(Model))
{
    var statusMessageClass = Model.EndsWith("Değiştirilemedi!") ? "danger" : "success";
    <div class="raw">
        <div class="alert alert-@statusMessageClass alert-dismissible col-6" role="alert">
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            @Model
        </div>
    </div>
}
