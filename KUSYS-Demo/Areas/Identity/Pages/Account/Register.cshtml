@page
@model RegisterModel
@{
    ViewData["Title"] = "Kullanıcı Kayıt";
}
<style>
    .card-registration .select-input.form-control[readonly]:not([disabled]) {
        font-size: 1rem;
        line-height: 2.15;
        padding-left: .75em;
        padding-right: .75em;
    }
    .card-registration .select-arrow { top: 13px;  }
    .divider:after,
    .divider:before {
        content: "";
        flex: 1;
        height: 1px;
        background: #eee;
    }
</style>

<section class="h-100 bg-gradient">
    <div class="container py-5 h-100 ">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col">
                <div class="card card-registration my-4" style="display: flex; flex-direction: column; align-items: center;">
                    <div class="row g-0">
                        <div class="col-xl-7 d-flex flex-column align-self-center" style="width:100%;">
                            <div class="card-body p-md-5 text-black mx-5 text-center">
                                <h1 class="text-gradient-blue">@ViewData["Title"]</h1>
                                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="text-center">
                                    <h5 class="text-sm-center">Hesap Oluşturmak İçin Bilgilerinizi Eksiksiz Giriniz</h5>
                                    <hr/>
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                    <div class="row">
                                        <div class="col-md-6 mb-4">
                                            <div class="form-floating">
                                                <input asp-for="Input.FirstName" class="form-control" autocomplete="username" aria-required="true"/>
                                                <label asp-for="Input.FirstName"></label>
                                                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-6 mb-4">
                                            <div class="form-floating">
                                                <input asp-for="Input.LastName" class="form-control" autocomplete="username" aria-required="true"/>
                                                <label asp-for="Input.LastName"></label>
                                                <span asp-validation-for="Input.LastName" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6 mb-4">
                                            <div class="form-floating">
                                                <input type="date" asp-for="Input.BirthDate" class="form-control" autocomplete="username" aria-required="true"/>
                                                <label asp-for="Input.BirthDate"></label>
                                                <span asp-validation-for="Input.BirthDate" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="col-md-6 mb-4">
                                            <div class="form-floating">
                                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true"/>
                                                <label asp-for="Input.Email"></label>
                                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                                            </div>
                                        </div>
                                        </>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6 mb-4">
                                            <div class="form-floating">
                                                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true"/>
                                                <label asp-for="Input.Password">Parola</label>
                                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-6 mb-4">
                                            <div class="form-floating">
                                                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true"/>
                                                <label asp-for="Input.ConfirmPassword">Parolanızı Tekrar Girin</label>
                                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>

                                    <button id="registerSubmit" type="submit" class="w-75 btn btn-lg btn-rounded" style="background-color: #0093D9; color: white">Kayıt Ol !</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}